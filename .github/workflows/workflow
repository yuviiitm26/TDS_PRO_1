name: Run GitHub Data Fetch Script

on:
  # Trigger the workflow on pushes to the main branch
  push:
    branches: [ main ]
  # Also allow manual triggers
  workflow_dispatch:

jobs:
  fetch-data:
    runs-on: ubuntu-latest

    steps:
    - name: Check out the code
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'  # Specify the version you need, e.g., '3.8'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install requests pandas  # You can also use a requirements.txt if available

    - name: Run the data fetch script
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}  # Set up GitHub token as a secret
      run: |
        python your_script_name.py  # Replace with your actual script name
